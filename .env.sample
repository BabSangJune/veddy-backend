# ==========================================
# 환경 설정
# ==========================================
# development: 로컬 개발 (Swagger 활성화, DEBUG 로그)
# production: 프로덕션 서버 (Swagger 비활성화, INFO 로그)
ENV="development"

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL="DEBUG"

# ==========================================
# 서버 설정
# ==========================================
SERVER_HOST="0.0.0.0"
SERVER_PORT="8000"

# ==========================================
# Gunicorn - Azure Container 최적화
# ==========================================
# 1 Core, 2GB RAM 환경
# BGE-m3-ko 모델 메모리 고려 시 안전한 워커 수
GUNICORN_WORKERS=2

# ==========================================
# Supabase
# ==========================================
SUPABASE_URL=""
SUPABASE_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""

# ==========================================
# Confluence API
# ==========================================
CONFLUENCE_URL="https://lab021.atlassian.net/wiki"
CONFLUENCE_API_TOKEN=""
CONFLUENCE_SPACE_KEY=""

# ==========================================
# OpenAI
# ==========================================
OPENAI_API_KEY=""

# ==========================================
# BGE 임베딩 모델 (로컬 실행)
# ==========================================
EMBEDDING_MODEL_NAME="dragonkue/BGE-m3-ko"
EMBEDDING_MODEL_DIMENSION="1024"

# HuggingFace Tokenizer 병렬 처리 (false 권장)
TOKENIZERS_PARALLELISM="false"

# ==========================================
# CORS 설정
# ==========================================
# 프론트엔드 도메인 (쉼표로 구분, 공백 없이)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173,https://ca-veddy-backend.happytree-13aab7d7.koreacentral.azurecontainerapps.io,https://veddy-frontend.vercel.app"

# ==========================================
# Microsoft Teams Bot
# ==========================================
MICROSOFT_APP_ID=""
MICROSOFT_APP_PASSWORD=""
MICROSOFT_TENANT_ID=""

# ==========================================
# Azure Container Instances
# ==========================================
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_CONTAINER_APP_NAME=your-container-group-name

# ==========================================
# 동적 VECTOR_SEARCH_CONFIG
# ==========================================
VECTOR_EF_SEARCH=50
VECTOR_CHUNK_TOKENS=400
VECTOR_OVERLAP_TOKENS=50
VECTOR_MIN_CHUNK_TOKENS=30
VECTOR_SIMILARITY_THRESHOLD=0.3
